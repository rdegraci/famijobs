<h3>Open positions</h3>


<table>
  <tr>

    <th>Title</th>
    <th>Description</th>
    <th>Rate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<%= form_tag :applied_positions, :method => :put do %>

<% @positions.each do |position| %>

  <tr>
	    <td><%= check_box('position', 'applied', { :index => position.id }, checked_value = "1" , unchecked_value = "0") %> <%= position.title %></td>
    	<td><%= position.description %></td>
    	<td><%= position.rate %></td>
    	<td><%= link_to 'Show', position %></td>
  </tr>
<% end %>

<%= submit_tag "Apply for Job"%>
<% end %>
</table>
<br />


